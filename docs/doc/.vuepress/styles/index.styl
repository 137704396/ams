@import './material-card.styl'
@import './material.styl'
@import './ams-doc-index.styl'

.el-popper, .ams-block {
    tr:nth-child(2n) {
        background-color: #fff;
    }
}

#app .no-sidebar .content,#app .no-sidebar .content__default{
    max-width: none
}
.sidebar{
    border-right: 0
}
.el-date-table {
    th{
        border none
    }
    tr,td{
        border: none
    }
}
.page .content:not(.custom),.page .content__default:not(.custom),.page .page-edit, .page .page-nav{
    max-width: 1100px;
    padding-left: 1rem;
}
.demo { 
    font-family: 'Helvetica Neue, Helvetica, PingFang SC, Hiragino Sans GB, Microsoft YaHei, Arial, sans-serif';
    text-rendering: 'optimizeLegibility';
    -webkit-font-smoothing: 'antialiased';
    margin-top: 25px;
}
.demo-item {
    border-left: 2px solid #42b983;
    padding-left: 10px;
    line-height: 20px;
    color: #555;
}

.el-date-table {
    display: table
}
.el-table__body {
    margin: 0
}
.el-table__header {
    margin: 0
}
.el-table__body td {
    border: none; border-bottom: 1px solid #ebeef5
}
.el-table__header th {
    border: none
}
.el-table__body, .el-table__header{
    table-layout: fixed;
    border-collapse: separate;
    display: table;
    margin: 0
}